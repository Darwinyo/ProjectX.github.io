    <div id="Wrapper">
        <div class="navbar navbar-inverse navbar-fixed-top headerbar">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="bavbar-toggle" id="side-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
        <div class="sidebarwrapper">
            <div class="sidebar-nav">
                <ul>
                    <li>
                        <a href="http://localhost/ProjectX/Manage/Index/" id="UserImageA">
                            <img class="img-circle" id="UserImage" src="http://localhost/ProjectX/Images/user.png" />
                        </a>
                        <div class="lead text-center">@User.Identity.Name</div>
                    </li>
                    @*@Html.MvcSiteMap().Menu("_Menu",showStartingNode:false)*@
                    <li>@Html.ActionLink("Index", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @if (User.IsInRole("Administrator"))
                    {
                    <li class="level1">
                        @Html.ActionLink("AdministratorIndex", "Index", "Home")
                    </li>
                    <li class="level1">
                        @Html.ActionLink("AccountManager", "Index","Home")
                    </li>   
                    }
                    @if (User.IsInRole("User")||User.IsInRole("Administrator"))
                    {
                        <li class="level1">
                            @Html.ActionLink("Data", "Index","Balance")
                            <ul>
                                <li class="level2">
                                    @Html.ActionLink("Index", "Index","Balance")
                                </li>
                                <li class="level2">
                                    @Html.ActionLink("ExpenseType", "Index","ExpensesTypes")
                                </li>
                                <li class="level2">
                                    @Html.ActionLink("IncomeType", "Index","IncomeTypes")
                                </li>
                            </ul>
                        </li>
                        
                    } 
                </ul>
            </div>
        </div>
        <div class="container-fluid body-content pagewrapper">
            <div class="panel panel-body">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now - ProjectX(Under Development)</p>
                </footer>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
